{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"]
    },
    "test:e2e": {
      "dependsOn": ["build"],
      "outputs": ["cypress/screenshots/", "cypress/videos/"]
    },
    "test:perf": {
      "outputs": ["lighthouse-reports/**"]
    },
    "clean": {
      "cache": false
    }
  },
  "globalDependencies": [
    "**/.env*local"
  ]
}
